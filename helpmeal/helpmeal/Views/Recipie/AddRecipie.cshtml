@using System.Threading.Tasks
@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
@using helpmeal.Models;
@using helpmeal.Services.IngredientService

@inject IIngredientService ingredientservice
<h2>AddRecipie</h2>

<form action="/addrecipie" method="post">
  Recipie name:<br>
  <input type="text" name="recipie_name"><br>

  Add ingredient and amount to your recipie:<br>
  <select name="Ingredient_unit1" class="form-control">
    @foreach (var unit in ingredientservice.FindAll())
    {
      <option text="@unit.Name @unit.Unit">@unit.Name</option>
    }
  </select>
  Amount:
  <br>
  <input type="text" name="amount1">
  <br>


  Cooking Method:<br>
  <textarea name="CookingMethod"></textarea>
  <br />
  <input type="submit" value="save your recipie">
</form>
