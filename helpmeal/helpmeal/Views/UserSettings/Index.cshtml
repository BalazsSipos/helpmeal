@model EditUserSettingsViewModel

@{
    ViewData["Title"] = "User settings";
}
<h2>User settings</h2>

<form asp-controller="UserSettings" asp-action="Index" method="post">
    <div>
        <label asp-for="EditUserSettingsRequest.NumberOfWeeksInCycle">Number of weeks in cycle</label>
        <input type="text" asp-for="EditUserSettingsRequest.NumberOfWeeksInCycle" class="form-control" />
        <span asp-validation-for="EditUserSettingsRequest.NumberOfWeeksInCycle" class="text-danger"></span>
    </div>
    <br />
    <div>
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-info, inline" onclick="history.back()">Back</button>
    </div>
</form>