@model EditUserSettingsViewModel

@{
    ViewData["Title"] = "User settings";
}
<h2>"User settings"</h2>

<form asp-controller="UserSettings" asp-action="Index" method="post">
    <div>
        <label asp-for="EditUserSettingsRequest.NumberOfWeeksInCycle">Number of weeks in cycle</label>
        <input type="text" asp-for="EditUserSettingsRequest.NumberOfWeeksInCycle" class="form-control" />
        <span asp-validation-for="EditUserSettingsRequest.NumberOfWeeksInCycle" class="text-danger"></span>
    </div>
    <span>Monday: </span> @Html.CheckBox("EditUserSettingsRequest.DaysOfShopping[0]", true)
    <span> | Tuesday: </span> @Html.CheckBox("EditUserSettingsRequest.DaysOfShopping[1]", false)
    <span> | Wednesday: </span> @Html.CheckBox("EditUserSettingsRequest.DaysOfShopping[2]", false)
    <span> | Thursday: </span> @Html.CheckBox("EditUserSettingsRequest.DaysOfShopping[3]", false)
    <span> | Friday: </span> @Html.CheckBox("EditUserSettingsRequest.DaysOfShopping[4]", false)
    <span> | Saturday: </span> @Html.CheckBox("EditUserSettingsRequest.DaysOfShopping[5]", false)
    <span> | Sunday: </span> @Html.CheckBox("EditUserSettingsRequest.DaysOfShopping[6]", false)
    <div>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
<button type="button" class="btn btn-info" onclick="history.back()">Back</button>
