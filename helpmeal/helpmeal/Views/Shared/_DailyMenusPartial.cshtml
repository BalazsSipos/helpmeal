@model DailyMealViewModel
<h1>Daily Menus</h1>

<div class="row">
    @foreach (var meal in Model.Meals)
    {
        <div class="col-md-3">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="http://via.placeholder.com/200x130" alt="Los Angeles" style="width:100%;">
                        <div class="carousel-caption d-none d-md-block">
                            <p>Teriyaki csirke</p>
                        </div>
                    </div>
                    <div class="item">
                        <img src="http://via.placeholder.com/200x130" alt="Chicago" style="width:100%;">
                        <div class="carousel-caption d-none d-md-block">
                            <p>Teriyaki csirke</p>
                        </div>
                    </div>
                    <div class="item">
                        <img src="http://via.placeholder.com/200x130" alt="New york" style="width:100%;">
                        <div class="carousel-caption d-none d-md-block">
                            <p>Teriyaki csirke</p>
                        </div>
                    </div>
                </div>
                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    }
</div>