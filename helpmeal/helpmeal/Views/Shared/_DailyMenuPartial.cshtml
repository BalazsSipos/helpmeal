@model 

<h1>Edit</h1>
<h1>Daily Menu</h1>

<div class="row">
    @foreach (var meals in Model.Menu)
    {
        <div class="col-md-6">
            <div class="card">
                <div class="card-horizontal">
                    <div class="img-square-wrapper">
                        <img class="" src="http://via.placeholder.com/200x150" alt="Card image cap">
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">@Html.DisplayFor(modelRestaurant => meal.Amount)</h4>
                        <h4 class="card-title">@Html.DisplayFor(modelRestaurant => meal.Name)</h4>
                        <div class="menu-button">
                            <form asp-controller="Menu" asp-action="Edit" method="get" asp-route-Id="@menu.MenuId">
                                <button type="submit" class="btn btn-success">EDIT</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<form asp-controller="DailyMenu" asp-action="@ViewData["Action"]" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <table width="100%">
        <tr>
            <td>
                <input type="text" asp-for=="Model.Amount" class="form-control" />
            </td>
            <td>
                <select asp-for="DailyMenu.Name">
                    <option selected disabled>Choose a recipe</option>
                    @foreach (var recipe in Model.Recipe)
                    {
                        <option value="@name">@name</option>
                    }
                </select>
            </td>
            <td>

            </td>
        </tr>
    </table>
</form>
<br />
<form asp-controller="Restaurant" asp-action="Edit" method="get" asp-route-id="@Model.MealId">
    <button type="submit" class="btn btn-info">Cancel</button>
</form>
