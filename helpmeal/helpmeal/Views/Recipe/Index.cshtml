@using System.Threading.Tasks
@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
@using helpmeal.Models;
@using helpmeal.Services.UnitService

@inject IUnitService unitservice


<form asp-controller="Recipe"
      asp-action="AddIngredient" method="post">
    Ingredientname:<br>
    <input type="text" name="Ingredient_name"><br>
    Ingredient Unit:<br>
    <select name="Ingredient_unit" class="form-control">
        @foreach (var unit in unitservice.FindAll())
        {
            <option text="@unit.Name">@unit.Name</option>
        }
    </select>
    <input type="submit" value="Submit">
</form>

